@model ChangeControlApp.Models.ViewModels.ChangeImpactVM


<style type="text/css">
    input::-webkit-calendar-picker-indicator {
        opacity: 100;
    }
</style>

<br />
<div class="row">
    <div class="col-2">
        <h2 class="text-info">@(Model.ChangeLog.Id != 0 ? "Edit" : "Create")</h2>
    </div>
    <div class="col-10" style="text-align:center">Change Control Record Test Patrick Branch
    </div>
    </div>
    <div class="container border" style="padding:30px;">

                    <div class="row">

                        <div class="col-6">
                            <h5 class="card-title">Change Request No.</h5>
                        </div>

                    </div>

                    <hr />
                    @if (Model.ChangeLog.Id != 0)
                    {
                        <input type="hidden" asp-for="ChangeLog.Id" />

                    }
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="ChangeLog.Description"></label>
                        </div>
                        <div class="col-9">
                            <input asp-for="ChangeLog.Description" class="form-control" />
                            <span asp-validation-for="ChangeLog.Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="ChangeLog.Reason"></label>
                        </div>
                        <div class="col-9">
                            <input asp-for="ChangeLog.Reason" class="form-control" />
                            <span asp-validation-for="ChangeLog.Reason" class="text-danger"></span>
